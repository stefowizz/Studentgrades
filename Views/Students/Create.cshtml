@model roundthecode.pdf.Models.Student

@{
    ViewData["Title"] = "Create";
}



<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>Student Information</h1>
        <form asp-action="Create" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GrdaeLvl" class="control-label"></label>
                <input asp-for="GrdaeLvl" class="form-control" />
                <span asp-validation-for="GrdaeLvl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher" class="control-label"></label>
                <input asp-for="Teacher" class="form-control" />
                <span asp-validation-for="Teacher" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sex" class="control-label"></label>
                <input asp-for="Sex" class="form-control" />
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Firstgrade" class="control-label"></label>
                <input asp-for="Firstgrade" class="form-control" />
                <span asp-validation-for="Firstgrade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Secondgrade" class="control-label"></label>
                <input asp-for="Secondgrade" class="form-control" />
                <span asp-validation-for="Secondgrade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Thirdgrade" class="control-label"></label>
                <input asp-for="Thirdgrade" class="form-control" />
                <span asp-validation-for="Thirdgrade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Average" class="control-label"></label>
                <input asp-for="Average" class="form-control" />
                <span asp-validation-for="Average" class="text-danger"></span>
            </div>
            

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary w-100" />
                    </div>
                </div>

                <div class="col-md-6">
                    <a asp-action="Index" class="btn btn-secondary w-100">View All Student Scores</a> 
                </div> 
            </div>

        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
